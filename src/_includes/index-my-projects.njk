<section class="my-projects section-wide">
  <h3 class="section__headline">Meine Projekte</h3>
  <ol class="my-projects__list no-list">
  {% for item in index.projects %}
    <li class="my-projects__list-item">
      <div class="card">
        <div class="card__header"><h3 class="card__headline">{{ item.name }}</h3></div>
        <div class="card__body"> {{ item.text }} </div>
        <div class="card__footer"> <a class="card__link" href="{{ item.link.linkUrl}}">{{ item.link.linkText }}</a> </div>
      </div>
    </li>
  {% endfor %}
  </ol>
</section>
